{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "../../../../lib",

    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "types": [ ],
    "lib": [
      "es5",
      "scripthost",
      "es2015.collection",
      "es2015.promise",
      "es2015.iterable",
      "dom"
    ],
    "strictNullChecks": true
  },

  "include": [
    "../../../../src/**/*.ts",
    "../../../../src/**/*.tsx"
  ]
}
